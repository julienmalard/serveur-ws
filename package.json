{
  "name": "@constl/serveur",
  "version": "0.1.5",
  "description": "Un serveur Constellation pour connecter à d'autres applications locales (sur la même machine)",
  "type": "module",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "repository": "https://github.com/reseau-constellation/serveur-ws",
  "author": "Julien Jean Malard-Adam",
  "license": "AGPL-3.0",
  "private": false,
  "scripts": {
    "watch": "npm-watch",
    "nettoyer": "rimraf dist",
    "compiler:esm": "tsc -p tsconfig.build.json && tscpaths -p tsconfig.build.json -s src -o dist",
    "compiler": "yarn versioner && yarn nettoyer && yarn compiler:esm",
    "test": "node --no-warnings --experimental-vm-modules ./node_modules/jest/bin/jest.js  --runInBand",
    "test:tous": "env TOUS=true yarn test",
    "test:navigateur": "karma start",
    "couverture": "yarn test --coverage",
    "couverture:tous": "yarn test:tous --coverage",
    "formatter": "yarn prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\" && yarn eslint --ext .js,.ts src",
    "publier": "yarn test && yarn compiler && yarn version",
    "postversion": "yarn versioner && git push --tags && yarn publish --tag $npm_package_version --new-version $npm_package_version --access public && git push && echo \"On a publié version $npm_package_version!\"",
    "versioner": "yarn genversion  --es6 --semi src/version.ts"
  },
  "dependencies": {
    "bufferutil": "^4.0.5",
    "chalk": "^4.1.2",
    "core-js": "3",
    "express": "^4.17.1",
    "find-free-port": "^2.0.0",
    "isomorphic-ws": "^4.0.1",
    "jest": "^29.0.1",
    "ora": "^6.0.1",
    "pkginfo": "^0.4.1",
    "ws": "^8.2.3",
    "yargs": "16"
  },
  "devDependencies": {
    "@constl/ipa": "^0.4.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.8",
    "@types/node": "^17.0.31",
    "@types/rimraf": "^3.0.2",
    "@types/ws": "^8.2.0",
    "@types/yargs": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-plugin-bin-shebang": "^1.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-node-gyp": "^0.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^28.0.8",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "bin": {
    "constl": "./dist/bin.js"
  },
  "files": [
    "lib"
  ],
  "peerDependencies": {
    "@constl/ipa": "^0.4.12"
  },
  "jest": {
    "transform": {},
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node"
  },
  "resolutions": {
    "@constl/ipa/orbit-db/orbit-db-store/ipfs-log/orbit-db-io": "1.0.2",
    "@constl/ipa/orbit-db/orbit-db-io": "1.0.2"
  },
  "overrides": {
    "orbit-db-io": {
      ".": "1.0.2"
    }
  }
}
