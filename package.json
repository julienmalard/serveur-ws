{
  "name": "@constl/serveur",
  "version": "0.1.9",
  "repository": "https://github.com/reseau-constellation/serveur-ws",
  "author": "Julien Jean Malard-Adam",
  "license": "AGPL-3.0",
  "private": false,
  "description": "Un serveur Constellation pour connecter à d'autres applications locales (sur la même machine)",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "watch": "npm-watch",
    "nettoyer": "rimraf dist",
    "compiler": "pnpm versioner && pnpm nettoyer && pnpm ttsc -p tsconfig.build.json && chmod +x ./dist/bin.js ",
    "test:processus": "export TYPE_SERVEUR=\"proc\" && node --experimental-vm-modules ./node_modules/jest/bin/jest.js  --runInBand --forceExit",
    "test:binaire": "export TYPE_SERVEUR=\"bin\" && pnpm compiler && node --experimental-vm-modules ./node_modules/jest/bin/jest.js  --runInBand --forceExit",
    "test": "pnpm test:processus && pnpm test:binaire",
    "couverture:processus": "pnpm test:processus --coverage",
    "couverture:binaire": "pnpm test:binaire --coverage",
    "couverture": "pnpm couverture:processus && pnpm couverture:binaire",
    "formatter": "pnpm prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\" && pnpm eslint --ext .js,.ts src",
    "publier": "pnpm versioner && pnpm compiler && git commit -a -m 'version' && pnpm publish",
    "versioner": "pnpm genversion  --es6 --semi src/version.ts"
  },
  "dependencies": {
    "bufferutil": "^4.0.5",
    "chalk": "^5.0.1",
    "core-js": "3",
    "express": "^4.17.1",
    "find-free-port": "^2.0.0",
    "iso-constants": "git+https://github.com/inverted-capital/iso-constants.git#patch-1",
    "isomorphic-ws": "^5.0.0",
    "ora": "^6.0.1",
    "ws": "^8.8.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@constl/ipa": "0.5.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.13",
    "@types/rimraf": "^3.0.2",
    "@types/ws": "^8.2.0",
    "@types/yargs": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "execa": "^6.1.0",
    "genversion": "^3.1.1",
    "ipfsd-ctl": "^12.0.0",
    "jest": "^29.0.1",
    "keyv": "^4.5.2",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "29.0.0-next.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.4",
    "typescript-transform-paths": "^3.3.1"
  },
  "resolutions": {
    "iso-constants": "git+https://github.com/inverted-capital/iso-constants.git#patch-1"
  },
  "overrides": {
    "iso-constants": {
      ".": "git+https://github.com/inverted-capital/iso-constants.git#patch-1"
    }
  },
  "bin": {
    "constl": "./dist/bin.js"
  },
  "peerDependencies": {
    "@constl/ipa": "^0.4.19"
  },
  "jest": {
    "transform": {},
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^@/(.*).js$": "<rootDir>/src/$1",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node"
  }
}
